{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "adapters/*": ["../../adapters/*"],
      "core/*": ["../..//core/*"],
      "ports/*": ["../..//ports/*"]
    },
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "module": "commonJs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "jsx": "preserve",
    "lib": ["es2018"],
    "types": ["express"],
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": []
}
